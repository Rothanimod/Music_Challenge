<div class="container" >
  <div class="row">
    <div class="col-md-8">
      <h1><%= @artist.name %></h1>
      <h3>Albums(<%= @artist.albums.count %>)</h3>
        <% @artist.albums.each do |album|%>
          <div class="col-sm-3 col-md-3">
              <div class="thumbnail">
                <%= image_tag album.image_url, class: 'image-responsive'%>
                <div class="caption">
                  <h3><%=album.name%> </h3>
                  <p><%= album.released_at %></p>
                </div>
              </div>
          </div>
        <%end%>
    </div>
    <div class="col-md-4">
      <%= image_tag @artist.image_url, class: 'image-responsive'%>
    </div>
  </div>
</div>
